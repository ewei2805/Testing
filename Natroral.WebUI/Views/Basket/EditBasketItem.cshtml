@model Natroral.Core.Models.BasketItem

@{
    ViewBag.Title = "Edit Basket Item";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="wrapper">
    <section class="main">
        <section>
            <header>
                <h1>@ViewBag.Title</h1>
                <p>Change the quantity of the item in your basket.</p>
            </header>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                @if (TempData["ProdName"] != null)
                {
                    <div class="row paddings">
                        <div class="col-2 col-12-xsmall">
                            <h4>Product Name</h4>
                        </div>
                        <div class="col-10 col-12-xsmall">
                            <h4>@TempData["ProdName"].ToString()</h4>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row paddings">
                        <div class="col-2 col-12-xsmall">
                            <h4>Product ID</h4>
                        </div>
                        <div class="col-10 col-12-xsmall">
                            <h4>@Html.DisplayFor(model => model.ProductId)</h4>
                        </div>
                    </div>
                }
                <div class="row paddings">
                    <div class="col-2 col-12-xsmall">
                        <strong>Date Ordered</strong>
                    </div>
                    <div class="col-10 col-12-xsmall">
                        @Html.DisplayFor(model => model.CreatedAt)
                    </div>
                </div>

                <div class="row paddings">
                    <div class="col-2 col-12-xsmall">
                        <strong>Basket ID</strong>
                    </div>
                    <div class="col-10 col-12-xsmall">
                        @Html.DisplayFor(model => model.BasketId)
                    </div>
                </div>
                <div class="row paddings">
                    <div class="col-2 col-12-xsmall">
                        <strong>Quantity</strong>
                    </div>
                    <div class="col-10 col-12-xsmall">
                        @Html.EditorFor(model => model.Quantity)
                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row paddings">
                    <div class="col-2 col-12-small">
                        <input type="submit" value="Save" class="button primary" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </section>
    </section>
</div>





