@model Natroral.WebUI.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send Code";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="wrapper">
    <section class="main">
        <section>
            <div class="row gtr-200">
                <div class="col-2"></div>
                <div class="col-8">
                    <header>
                        <h1>@ViewBag.Title</h1>
                    </header>

                    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("rememberMe", @Model.RememberMe)
                
                        <div class="row paddings">
                            <div class="col-10">
                                Select Two-Factor Authentication Provider:
                                @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                                <input type="submit" value="Submit" class="button primary" />
                            </div>
                        </div>
                    }

                </div>
                <div class="col-2"></div>
            </div>
        </section>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
