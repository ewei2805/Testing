@model Natroral.WebUI.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="wrapper">
    <section class="main">
        <section>
            <div class="row gtr-200">
                <div class="col-2 col-12-small"></div>
                <div class="col-8 col-12-small">
                    <header>
                        <h1>@ViewBag.Title</h1>
                    </header>
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)

                        <div class="row paddings">
                            @Html.LabelFor(m => m.Email, new { @class = "col-3 col-12-xsmall" })
                            <div class="col-9 col-12-xsmall">
                                @Html.TextBoxFor(m => m.Email)
                            </div>
                        </div>
                        <div class="row paddings">
                            @Html.LabelFor(m => m.Password, new { @class = "col-3 col-12-xsmall" })
                            <div class="col-9 col-12-xsmall">
                                @Html.PasswordFor(m => m.Password)
                            </div>
                        </div>
                        <div class="row paddings">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-3 col-12-xsmall" })
                            <div class="col-9 col-12-xsmall">
                                @Html.PasswordFor(m => m.ConfirmPassword)
                            </div>
                        </div>
                        <hr />
                        <div class="row paddings">
                            <div class="col-3 col-12-xsmall"></div>
                                <div class="col-9 col-12-xsmall">
                                    <input type="submit" class="button primary" value="Reset" />
                                </div>
                            </div>
                            }
                        </div>
                <div class="col-2 col-12-small"></div>
            </div>         
        </section>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
