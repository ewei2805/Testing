@model Natroral.Core.Models.Category

@{
    ViewBag.Title = "Delete Category";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="wrapper">
    <section class="main">
        <section>
            <header>
                <h1>@ViewBag.Title</h1>
            </header>
            <br />
            <h4>Are you sure you want to delete this category?</h4>
            <p>Before deleting this category, you need delete its products.</p>
            <hr />
            <div class="row gtr-200">
                <div class="col-2">
                    <b>  @Html.DisplayNameFor(model => model.CategoryName)</b>
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.CategoryName)
                </div>
            </div>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row gtr-200">
                    <div class="col-2">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                    <div class="col-6">
                        <input type="submit" value="Confirm Delete" class="button" />
                    </div>
                </div>
            }
        </section>
    </section>
</div>
